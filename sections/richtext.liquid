{%- assign secSt = section.settings -%}
<div class="content-indent {{ secSt.top-offeset}}{% if secSt.hide_mobile %} hide-sm{% endif %}{% if secSt.hided %} hide-md hide-lg{% endif %}">   
 {% if secSt.section_cov %}<div class="section-cover" style="background:{% if secSt.bgg != blank %}{{ secSt.bgg }}{% else %}{{secSt.sec_bg_clr}}{% endif %};">{% endif%} 
  <div class="richtxt id-{{section.id}} wow fadeIn">  		      
    <div class="{% if secSt.fullwidth %}fullwidth{% else %}page-width{%endif%}">
      {% if secSt.image != blank %}        
      	{%- assign img_url = secSt.image | img_url: '1x1' | replace: '_1x1.', '_{width}x.' -%}
          <p class="{{secSt.txt_align}}">
              <img class="lazyload" src="{{ secSt.image | img_url: '50x' }}" width="{{secSt.image.width}}"
                data-srcset="{% render 'lazyload', image: secSt.image, sizes: '180, 360, 540, 720, 900' %}" data-sizes="auto" alt="{{ secSt.image.alt | escape }}" style="border-radius:{{ secSt.img_rad }}px;" ></p>
      {%- endif -%}

      <div class="page-width {{secSt.txt_align}}" style="max-width:{{secSt.max-width}}px;">                   
          {% if secSt.title != blank %}<h2 class="ttlTxt" style="--tcl:{{secSt.tcl}};--tfs:{{secSt.tfs}}px;--tfsm:{{secSt.tfsm}}px;--tff:var(--{{secSt.tff}});--tfw:{{secSt.tfw}};--tlh:{{secSt.tlh}}">{{ secSt.title}}</h2>{% endif %}
          {% if secSt.richtxt != blank %}<div class="rgTxt mb20" style="--cl:{{secSt.cl}};--fs:{{secSt.fs}}px;--fsm:{{secSt.fsm}}px;--lh:{{secSt.lh}}">{{ secSt.richtxt }}</div>{% endif %}
    
        {% if secSt.btntxt != blank and secSt.btnurl != blank %}                             
            <a class="btn {{secSt.btn-size-mob}} {{secSt.btn-size-desk}} {{secSt.btn-style}}" href="{{secSt.btnurl}}">{{ secSt.btntxt }}</a>
        {% endif %}
        {% if secSt.btntxt1 != blank and secSt.btnurl1 != blank %}                             
            <a class="btn {{secSt.btn-size-mob}} {{secSt.btn-size-desk}} {{secSt.btn-style2}}" href="{{secSt.btnurl1}}">{{ secSt.btntxt1 }}</a>
        {% endif %}

      </div>
    </div> 
  </div>
 {% if secSt.section_cov %}</div> {% endif%}   
</div>   
