            {% endif %}
            <div id="instafeed{{section.id}}" class="instafeed im{{ blkSt.images_size }} rwcols-{{blkSt.mobile-grid}} rwcols-md-{{blkSt.tablet-grid}} rwcols-lg-{{blkSt.grid}}"></div>   
          </div>
        </div>
  		{% endif %}
        
        {% when 'socialicons' %}
