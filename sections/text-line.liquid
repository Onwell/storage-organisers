{%- assign secSt = section.settings -%}
<div class="content-indent {{ section.settings.top-offeset}}{% if secSt.hide_mobile %} hide-sm{% endif %}{% if secSt.hided %} hide-md hide-lg{% endif %}">    
  <div class="{% unless secSt.section_width %} page-width{% else %} fullwidth{% if secSt.npd %} npd{% endif %}{% endunless %}">     
    <div class="section-cover id-{{section.id}} wow fadeIn" style="background:{% if secSt.bgg != blank %}{{ secSt.bgg }}{% else %}{{secSt.bg}}{% endif %};padding:{{ section.settings.text-padding}}px 10px;border-radius:{{secSt.br}}px;">
       
		{% if section.settings.m_text %}<div class="marquee-text">{% endif %}
		<div class="ttlTxt tc" style="--tcl:{{secSt.cl}};--tfs:{{secSt.fs}}px;--tfsm:{{secSt.fsm}}px;--tff:var(--{{secSt.ff}});--tfw:{{secSt.fw}};--tlh:{{secSt.lh}};">
        {%- if section.settings.infolines != blank %}{{ section.settings.infolines }}{%- endif -%}
        </div>
		{% if section.settings.m_text %}</div>{% endif %}		
		
    </div> 
  </div>
</div> 
{% schema %}
  {
    "name": "t:sections.textline.name",
    "class": "index-section",   	
	"settings":[	
	 {
            "type": "select",
            "id": "top-offeset",
            "label": "t:sections.all.top_offSet",
            "default": "default",
            "options": [
              {
                "value": "default",
                "label": "Default"
              },
              {
                "value": "small",
                "label": "Small"
              },
			  {
                "value": "none",
                "label": "None"
              }
			]
        },	
       {
		"type":"checkbox",
		"id":"section_width",
		"label":"t:global.fullwidth",
		"default": true
	  },
	  {
			"type":"checkbox",
			"id":"npd",
			"label":"t:global.no_padding",
			"info": "t:global.no_padding_info",
			"default": true
	 },
      {
            "type": "checkbox",
            "id": "hide_mobile",
            "label": "t:global.devices.mobile_hide",
            "default": false
        },
       {
            "type": "checkbox",
            "id": "hided",
            "label":"t:global.devices.desktop_hide",
            "default": false
        },
      	{
            "type": "color",
            "id": "bg",
            "label": "t:global.background.color",
			"default":"#fafafa"	
		 },
        {
            "type": "color_background",
            "id": "bgg",
            "label": "t:global.background.gradient"
        },		
		{
        "type": "range",
        "id": "br",
        "min": 0,
        "max": 30,
        "step": 1,
        "label": "t:global.background.radius",
        "unit": "px",
        "default": 0
		},
		{
        "type": "textarea",
        "id": "infolines",
        "label": "t:global.text.text",
        "default": "To show our gratitude, weâ€™re offering 10% off all purchases using code THANKS10."   
        },
       {
        "type": "paragraph",       
        "content": "t:sections.textline.find_icon"
        },
		{
            "type": "color",
            "id": "cl",
            "label": "t:global.color.text",
			"default":"#111"	
		 },
      {
		"type": "range",
		"id": "fs",
		"label": "t:global.font.size",
		"default": 18,
		"min": 10,
		"max": 100,
		"step": 1,
		"unit": "px"
	},
	{
		"type": "range",
		"id": "fsm",
		"label": "t:global.font.size_mobile",
		"default": 18,
		"min": 10,
		"max": 60,
		"step": 1,
		"unit": "px"
	},
	{
		"type": "select",
		"id": "ff",
		"label": "t:global.font.family",
		"default": "ft1",
		"options": [
			{
				"value": "ft1",
				"label": "Font 1"
			},
			{
				"value": "ft2",
				"label": "Font 2"
			},
			{
				"value": "ft3",
				"label": "Font 3"
			}
		]
	},
	{
		"type": "select",
		"id": "fw",
		"label": "t:global.font.weight",
		"default": "400",
		"options": [
			{
				"value": "300",
				"label": "Light"
			},
			{
				"value": "400",
				"label": "Regular"
			},
			{
				"value": "500",
				"label": "Medium"
			},
			{
				"value": "600",
				"label": "Semi Bold"
			},
			{
				"value": "700",
				"label": "Bold"
			}
		]
	}, 	
	{
		"type": "range",
		"id": "lh",
		"label": "t:global.font.height",
		"default": 1.3,
		"min": 1.0,
		"max": 2.0,
		"step": 0.1,
		"info": "t:global.font.height_info"
	},
	 {
		"type": "range",
		"id": "text-padding",
		"label": "t:sections.textline.padding",
		"min": 5,
		"max": 50,
		"step": 1,
		"unit": "px",
		"default": 20
	 }	
	
	],
	"presets": [
      {
		 "name": "t:sections.textline.name"        
	 }
   ]
  }
{% endschema %}

