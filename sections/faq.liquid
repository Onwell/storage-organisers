{%- assign secSt = section.settings -%}
<div class="content-indent {{ section.settings.top-offeset}}{% if secSt.hide_mobile %} hide-sm{% endif %}{% if secSt.hided %} hide-md hide-lg{% endif %}">   
  {% if section.settings.section_cov %}<div class="section-cover" style="background:{% if secSt.bgg != blank %}{{ secSt.bgg }}{% else %}{{secSt.sec_bg_clr}}{% endif %};">{% endif%} 
  <div class="page-width" style="max-width:{{section.settings.max-width}}px;">
	{% render 'sec-title' %}
    <div class="faq-{{section.settings.pagestyle}}">
      <div id="{{section.id}}" class="faqList" style="--tcl:{{secSt.tcl}};--tfs:{{secSt.tfs}}px;--tfsm:{{secSt.tfsm}}px;--tff:var(--{{secSt.tff}});--tfw:{{secSt.tfw}};--tbg:{{secSt.tbg}};
            --qcl:{{secSt.qcl}};--qfs:{{secSt.qfs}}px;--qfsm:{{secSt.qfsm}}px;--qfw:{{secSt.qfw}};">
        {% for block in section.blocks limit: section.blocks.size%}                 
			{% if block.type == 'faqsection' and block.settings.sectiontitle != blank %}<h3 class="ttlTxt mb0">{{block.settings.sectiontitle}}</h3>{% endif %}
			{% if block.type == 'faqs' %}
			<{% if section.settings.pagestyle == 'style1' %}details{% else %}div{% endif %} class="faq-body">
			  <summary class="panel-title fl f-jcsb j-aic">{{ block.settings.title}}{% if section.settings.pagestyle =='style1' %}<i class="at at-plus-l"></i>{% endif %}</summary>
			  <div id="{{ block.id }}" class="panel-content rte">{{ block.settings.answer}}</div>
			</{% if section.settings.pagestyle == 'style1' %}details{% else %}div{% endif %}>
			{% endif %}
        {% endfor %}
      </div>
    </div>
  </div>
  {% if section.settings.section_cov %}</div> {% endif%}  
</div>

