{%- capture instagramFeed -%}
{% assign secSt = section.settings %}
<div class="content-indent {{secSt.top-offeset}}{% if secSt.hide_mobile %} hide-sm{% endif %}{% if secSt.hided %} hide-md hide-lg{% endif %}">
  <div class="{% unless secSt.section_width %} page-width{% else %} fullwidth{% if secSt.npd %} npd{% endif %}{% endunless %} wow fadeIn" data-section-id="{{ section.id }}" data-section-type="instagram" data-image="{{ secSt.images_size }}" data-count="{{ secSt.limit }}" data-act="{{ secSt.act }}">
    <section class="home-instagram wow fadeIn">   
        <div class="widget-title tc">        
         {% render 'sec-title' %}        
        </div>    
      	<div id="instafeed{{section.id}}" class="grid rwcols-{{secSt.mobile-grid}} rwcols-md-{{secSt.tablet-grid}} rwcols-lg-{{secSt.grid}} pr tc instafeed{% if secSt.instastyle == 'carousel' %} carousel{% else %} list{% endif %}{% if secSt.grid_space %} grid-sp{% endif %}{% if secSt.section_width or settings.layout_style == "fullwidth" %} fw{% endif %}" style="--brd:{{secSt.brd}}px;"
             {% if secSt.instastyle == 'carousel' %}data-flickity1='{ "cellAlign":"left","groupCells":true,"wrapAround":true,"pageDots":false{%- if secSt.autoplay -%},"autoPlay":{{secSt.speed | times: 1000}}{% endif %}{%- if settings.rtl -%},"rightToLeft": true{%- endif -%} }'{% endif %}></div>
        {% if secSt.instagram_button_text != blank and secSt.instagram_button_link != blank %}
            <div class="followus">
              <a href="{{ secSt.instagram_button_link }}" title="{{ secSt.instagram_button_text }}" target="_blank" class="btn">{{ secSt.instagram_button_text }}</a>
            </div>
        {% endif %}
    </section>
  </div>
</div>
{%- endcapture -%}
{{instagramFeed | strip_newlines | remove: "  " | remove: "	" }}
{% schema %}
  {
    "name": "t:sections.instagram.name",
    "settings": [
      {
        "type": "textarea",
        "id": "title",
        "label": "t:sections.all.head",
        "default": "Avone On Instagram"
      },
      {
        "type": "textarea",
        "id": "subtitle",
        "label": "t:sections.all.sub_head",
        "default": "Phasellus lorem malesuada ligula pulvinar commodo auctom."
      }, 	
	  {
		 "type": "header",
		 "content":"t:sections.all.name"
      },	 
	  {
            "type": "select",
            "id": "top-offeset",
            "label": "t:sections.all.top_offSet",
            "default": "default",
            "options": [
              {
                "value": "default",
                "label": "Default"
              },
              {
                "value": "small",
                "label": "Small"
              },
			  {
                "value": "none",
                "label": "None"
              }
			]
      },
      {
		"type":"checkbox",
		"id":"section_width",
		"label":"t:global.fullwidth",
		"default": true
	  },
	 {
			"type":"checkbox",
			"id":"npd",
			"label":"t:global.no_padding",
			"info": "t:global.no_padding_info",
			"default": true
	  },
       {
            "type": "checkbox",
            "id": "hide_mobile",
            "label": "t:global.devices.mobile_hide",
            "default": false
        },
       {
            "type": "checkbox",
            "id": "hided",
            "label":"t:global.devices.desktop_hide",
            "default": false
        },
	  {
        "type": "text",
        "id": "act",
        "label": "t:sections.instagram.api",
        "info": "t:sections.instagram.api_info"
      },
	  {
		"type":"header",
		"content":"t:global.appearance"
	  },	
	  {
            "type": "select",
            "id": "instastyle",
            "label": "t:sections.instagram.style",
            "default": "carousel",
            "options": [
              {
                "value": "carousel",
                "label": "Carousel"
              },
              {
                "value": "list",
				"label": "List"
              }			  
		   ]
      }, 
 	 {
        "type": "checkbox",
        "id": "grid_space",
        "label": "t:sections.instagram.enable_space",
        "default": true       
      },
	 {
            "type": "range",
            "id": "brd",
            "label": "t:global.image.radius",
            "default": 0,
            "min": 0,
            "max": 30,
            "step": 1,
            "unit":"px"		
       },  
      {
        "type": "range",
        "id": "limit",
        "label": "t:sections.instagram.number_of_photos",
        "default": 7,
        "min": 1,
        "max": 20,
        "step": 1
      },      
	  {
         "type": "paragraph",
         "content": "t:sections.instagram.photos_per_row"
      },
      {
        "type": "range",
        "id": "grid",
        "label": "t:global.devices.desktop",
        "default": 6,
        "min": 1,
        "max": 10,
        "step": 1
      },
      {
        "type": "range",
        "id": "tablet-grid",
        "label": "t:global.devices.tablet",
        "default": 5,
        "min": 1,
        "max": 7,
        "step": 1
      },
      {
        "type": "range",
        "id": "mobile-grid",
        "label": "t:global.devices.mobile",
        "default": 3,
        "min": 1,
        "max": 5,
        "step": 1
      },	 	
	  {
        "type": "text",
        "id": "instagram_button_text",
        "label": "t:global.button.text",
        "default": "View Gallery"
      },
      {
        "type": "text",
        "id": "instagram_button_link",
        "label": "t:global.button.link"
      }		
    ],   
    "presets": [
      {
        "name": "t:sections.instagram.name"         
      }
    ]
  }
{% endschema %}